<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1"/>
  </system.web>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IDeliveryService" />
        <binding name="BasicHttpsBinding_IDeliveryService">
          <security mode="Transport" />
        </binding>
        <binding name="Library" />
        <binding name="Library1" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://eltech2018-deliveryservice.azurewebsites.net/DeliveryService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IDeliveryService"
        contract="ServiceReference1.IDeliveryService" name="BasicHttpBinding_IDeliveryService" />
      <endpoint address="https://eltech2018-deliveryservice.azurewebsites.net/DeliveryService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpsBinding_IDeliveryService"
        contract="ServiceReference1.IDeliveryService" name="BasicHttpsBinding_IDeliveryService" />
      <endpoint address="http://recipebase.tmweb.ru/Kris_Grisha/server.php"
        binding="basicHttpBinding" bindingConfiguration="Library" contract="ServiceReference2.Library"
        name="BookLibrary" />
      <endpoint address="http://recipebase.tmweb.ru/Kris2/server.php"
        binding="basicHttpBinding" bindingConfiguration="Library1" contract="ServiceReference3.Library"
        name="BookLibrary1" />
    </client>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!--Чтобы избежать раскрытия метаданных, до развертывания задайте следующим параметрам значение "false". -->
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <!-- Чтобы при сбое получать подробные сведения об исключении для целей отладки, установите для нижеприведенного параметра значение true.  Перед развертыванием установите значение false, чтобы избежать раскрытия информации об исключении -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        Для просмотра корневого каталога веб-приложения во время отладки установите значение true.
        Перед развертыванием установите значение false, чтобы избежать раскрытия сведений в папке веб-приложения.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>
  <connectionStrings>
    <add name="DefaultConnection" connectionString="Data Source= ЛЕРА-ПК\SQLEXPRESS;Initial Catalog=CollofDishes;Integrated Security=True"
        providerName="System.Data.SqlClient"/>
  </connectionStrings>
</configuration>
